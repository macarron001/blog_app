<div class="d-flex flex-column justify-content-center align-items-center" id="category-show-wrapper">
  <div class="card d-flex flex-column justify-content-center align-items-center" style="width: 25rem; height: 10rem">
    <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h3 class="card-title" id="entry-content"><%= @comment.body %></h3>
    </div>
    <div class="d-flex w-100 justify-content-end">
      <p class="card-text" id="note-date"><%= @comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
  </div>

  <div class="d-flex justify-content-end pt-3" style="width: 25rem">
    <%= link_to "Return", article_comments_path(@article), id:"edit-entry-link", class:"btn btn-outline-secondary" %>
    <%= link_to "Edit", edit_article_comment_path(@article), id:"edit-entry-link", class:"btn btn-outline-warning" %>
    <%= button_to "Delete", article_comment_path(@article, @comment), method: :delete, class:"btn btn-outline-danger" %>
  </div>
  
</div>